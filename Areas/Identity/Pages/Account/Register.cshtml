@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Register</h1>
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Contact Preference</label>
                <div>
                    <input asp-for="Input.ContactPreference" type="radio" value="phone" id="radio_4" />
                    <label asp-for="Input.ContactPreference" for="radio_4" class="radio"><span>Phone</span></label>
                </div>
                <div>
                    <input asp-for="Input.ContactPreference" type="radio" value="email" id="radio_5"  />
                    <label asp-for="Input.ContactPreference" for="radio_5" class="radio"><span>Email</span></label>
                </div>
                <div>
                    <input asp-for="Input.ContactPreference" type="radio" value="any" id="radio_6" />
                    <label asp-for="Input.ContactPreference" for="radio_6" class="radio"><span>Any</span></label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
