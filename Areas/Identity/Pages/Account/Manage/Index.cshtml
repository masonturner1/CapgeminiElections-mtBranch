@page

@model IndexModel
@inject UserManager<CapgeminiElectionsUser> UserManager

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Contact Preference</label>
                <div>
                    <input asp-for="Input.ContactPreference" type="radio" value="phone" id="radio_4" />
                    <label asp-for="Input.ContactPreference" for="radio_4" class="radio"><span>Phone</span></label>
                </div>
                <div>
                    <input asp-for="Input.ContactPreference" type="radio" value="email" id="radio_5"  />
                    <label asp-for="Input.ContactPreference" for="radio_5" class="radio"><span>Email</span></label>
                </div>
                <div>
                    <input asp-for="Input.ContactPreference" type="radio" value="any" id="radio_6"  />
                    <label asp-for="Input.ContactPreference" for="radio_6" class="radio"><span>Any</span></label>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}