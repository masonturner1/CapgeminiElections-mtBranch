@page
@model IndexModel

@using Microsoft.AspNetCore.Identity
@using CapgeminiElections.Areas.Identity.Data
@using System.Security.Principal
@using Google.Apis.CivicInfo.v2;
@using Google.Apis.CivicInfo;
@using Google.Apis.Discovery;
@using NewsAPI;
@using NewsAPI.Models;
@using NewsAPI.Constants;

@inject SignInManager<CapgeminiElectionsUser> SignInManager
@inject UserManager<CapgeminiElectionsUser> UserManager






<head>
    <title>Register to vote!</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <style>
        html, body {
            min-height: 100%;
        }

        body, div, form {
            font-family: Roboto, Arial, sans-serif;
            font-size: 14px;
            color: #666;
            line-height: 22px;
        }

        h1 {
            position: absolute;
            margin: 0;
            font-size: 40px;
            color: dodgerblue;
            z-index: 2;
            line-height: 83px;
        }

        h2 {
            position: absolute;
            bottom: 0px;
            margin: 0;
            font-size: 60px;
            color: blue;
            z-index: 2;
            line-height: 83px;
        }

        h5 {
            position: absolute;
            bottom: 0px;
            margin: 0;
            font-size: 50px;
            color: black;
            z-index: 2;
            line-height: 83px;
        }

        h4 {
            position: absolute;
            bottom: 10%;
            margin: 0;
            font-size: 30px;
            color: black;
            z-index: 2;
            line-height: 83px;
        }

        .leftbox {
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 30%;
            width: 33%;
            top: 55%;
            left: 15%;
            padding: 10px;
        }

            .leftbox::after {
                content: "";
                background-color: aliceblue;
                position: absolute;
                width: 100%;
                height: 100%;
            }

        .rightbox {
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 30%;
            width: 33%;
            right:15%;
            top:55%;
            padding: 10px;
        }

            .rightbox::after {
                content: "";
                background-color: aliceblue;
                position: absolute;
                width: 100%;
                height: 100%;
            }

        .bannerleft {
            position: absolute;
            left: 0px;
            bottom: 100%;
            height: 50%;
            width: 100%;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            border: 3px solid black;
        }

            .bannerleft::after {
                content: "";
                background-color: #84c2ff;
                position: absolute;
                width: 100%;
                height: 100%;
            }

        .bannerright {
            position: absolute;
            right: 0%;
            bottom: 100%;
            height: 50%;
            width: 100%;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            border: 3px solid black;
        }

            .bannerright::after {
                content: "";
                background-color: #84c2ff;
                position: absolute;
                width: 100%;
                height: 100%;
            }

        .body {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            flex-direction: row;
            flex-wrap: wrap;
        }

            .body div {
                width: 75%;
            }
        .title {
            display: flex;
            height:200px;
            width:1200px;
            position:absolute;
            align-items:center;
            justify-content:center;
            text-align:center;
            bottom: 70%;
            left: 12%;
            
            /*left:200px;
            bottom: 525px; */
        }
        .subtitle {
            display: flex;
            height:200px;
            width:1200px;
            position:absolute;
            align-items:center;
            justify-content:center;
            text-align:center;
            left:12%;
            bottom: 60%;
            /*left:200px;
            bottom: 450px; */
        }
    </style>
</head>
<body>
    <div>
        <img src="~/Cap-Gem-logo.jpg" width="300" height="250">
    </div>
    <div class="title">
        <h1 class="display-4"><b>Capgemini Elections Engagement App!</b></h1>

    </div>

    <div class=" subtitle">
        <h3 style="text-align:center">Please Register for more personal Information!</h3>
    </div>

    <div class="rightbox">
        <form method="post">
            <div class="bannerright" style="background-color: dodgerblue;">
                <h5>Set Up Notifications!</h5>

            </div>

            <div class="body">
                <h4>Sign up for an account in order to receive text and email notifications!</h4>
            </div>
        </form>
    </div>
    <div class="leftbox">
        <form method="post">
            <div class="bannerleft" style="background-color: dodgerblue;">
                <h2><u><a href="https://www.usa.gov/register-to-vote" target="_blank">Register to Vote!</a></u></h2>

            </div>

            <div class="body">
                <h4>Click here to learn how you can register to vote in your state!</h4>
            </div>
        </form>
    </div>
</body>
